<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名称"
        android:gravity="center"
        android:textSize="@dimen/text_size_25"
        android:layout_margin="@dimen/text_size_20"
        android:textColor="@color/green"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/green" />
    <EditText
        android:id="@+id/ed_alarmname_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textCursorDrawable="@null"
        android:hint="关爱提醒"
        android:gravity="center"
        android:background="@drawable/item_alarmlayerbg"
        android:layout_margin="@dimen/space_5"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />
    <TextView
        android:id="@+id/tv_alarmname_confirm"
        style="@style/MenuItemTextViewStyle"
        android:layout_height="@dimen/space_49"
        android:text="完成"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>