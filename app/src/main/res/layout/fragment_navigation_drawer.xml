<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/qqqq"

     >
    <RelativeLayout

        android:id="@+id/iv_personcenter_head"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ctyon.com.ctsservice.view.CircleImageView
            android:id="@+id/cl_person_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_inf_photo_girl"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/cl_person_icon"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_person_name"
                android:text="姓名"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_person_id"
                android:text="88888888888"
                android:textSize="15sp"
                android:textColor="#000000"

                />

        </LinearLayout>


    </RelativeLayout>

	
    <ctyon.com.ctsservice.view.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_personcenter"
                style="@style/MenuItemLayoutStyle"
                >
                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_person"
                    android:contentDescription="@null" />
                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="个人中心" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_messageremind"
                style="@style/MenuItemLayoutStyle"
                >
                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_message"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="消息提醒" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_guide"
                style="@style/MenuItemLayoutStyle" >

                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_guide"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="新手指南" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_freeback"
                style="@style/MenuItemLayoutStyle" >

                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_freeback"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="意见反馈" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_aboutus"
                style="@style/MenuItemLayoutStyle" >

                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_aboutus"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:gravity="center"
                    android:text="关于我们" />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/ll_recommend"
                style="@style/MenuItemLayoutStyle"
                >

                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_recommend"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="推荐好友" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_versionupdate"
                style="@style/MenuItemLayoutStyle"
                >

                <ImageView
                    style="@style/MenuItemImageViewStyle"
                    android:background="@drawable/sliding_version"
                    android:contentDescription="@null" />

                <TextView
                    style="@style/MenuItemTextViewStyle"
                    android:text="版本更新" />
            </LinearLayout>



        </LinearLayout>

    </ctyon.com.ctsservice.view.CustomerScrollView >
    
    <include layout="@layout/fragment_navigation_drawer_foot"/>
    
</LinearLayout>