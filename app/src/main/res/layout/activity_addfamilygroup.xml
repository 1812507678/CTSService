<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">




    <LinearLayout
        android:id="@+id/ll_add_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF">


        <LinearLayout
            android:id="@+id/ll_add_you"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_add_you"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/care_impower_blue"/>
            <TextView
                android:id="@+id/tv_add_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我授权的亲友"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/app"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_add_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_add__me"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/care_look_black"/>
            <TextView
                android:id="@+id/tv_add_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我能看的亲友"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#999"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>


    </LinearLayout>

    <android.support.v4.view.ViewPager

        android:id="@+id/vp_fragmentgroup_page"
        android:layout_above="@id/ll_add_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>



</RelativeLayout>