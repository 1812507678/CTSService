<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_map_newfence"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="3dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/location_e"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_map_histalarm"
        android:layout_below="@id/ll_map_newfence"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="3dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/location_f"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_map_state"
        android:layout_below="@id/ll_map_histalarm"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="3dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/location_g"/>

    </LinearLayout>

</RelativeLayout>