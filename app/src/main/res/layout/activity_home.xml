                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关爱"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"/>
